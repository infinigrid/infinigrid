{
  "name": "infinigrid",
  "productName": "Infinigrid",
  "version": "1.0.4",
  "description": "InfiniteË£ hexagon grid",
  "main": "dist/index.js",
  "scripts": {
    "build": "babel src --out-dir dist --ignore src/infinigrid.js",
    "build:watch": "npm run build -- -w",
    "bundle": "browserify ./src/index.js --standalone Infinigrid -d -t [babelify] | exorcist dist/infinigrid.js.map > dist/infinigrid.js && uglifyjs ./dist/infinigrid.js -c -m --in-source-map ./dist/infinigrid.js.map --source-map ./dist/infinigrid.min.js.map --source-map-url infinigrid.min.js.map > dist/infinigrid.min.js",
    "bundle:watch": "watchify ./src/index.js --standalone Infinigrid -d -t [babelify] -o dist/infinigrid.js",
    "test": "mocha --compilers js:babel-register",
    "preversion": "npm test",
    "version": "npm run build && npm run bundle",
    "postversion": "git push && git push --tags && npm publish"
  },
  "repository": "johnsusi/infinigrid",
  "author": "John Susi <john@susi.se> (https://github.com/johnsusi/)",
  "license": "MIT",
  "bugs": "https://github.com/johnsusi/infinigrid/issues",
  "homepage": "https://github.com/johnsusi/infinigrid#readme",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-plugin-uglify": "^1.0.2",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "dotenv": "^2.0.0",
    "exorcist": "^0.4.0",
    "mocha": "^2.5.3",
    "uglify-js": "^2.6.2",
    "watchify": "^3.7.0"
  },
  "peerDependencies": {},
  "babel": {
    "presets": [
      "react",
      "es2015"
    ],
    "plugins": [
      "transform-object-rest-spread"
    ]
  },
  "dependencies": {
    "gl-matrix": "^2.3.2"
  }
}
